<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/My_Container_1_ID"
    android:layout_weight="3"
    tools:context="com.maple.mallr.mongo.MapsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/proBtn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/round_button"
            android:onClick="sendMessage"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:text="Profile"
            android:textColor="#fff" />

        <Button
            android:id="@+id/fltrBtn"
            android:onClick="filter"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:text="Filter"
            android:textColor="#fff" />

        <Button
            android:id="@+id/fdbkBtn"
            android:onClick="feedback"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignStart="@id/proBtn"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="87dp"
            android:background="@drawable/round_button"
            android:text="Feedback"
            android:textColor="#fff" />

        <Button
            android:id="@+id/helpBtn"
            android:onClick="help"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignStart="@id/fdbkBtn"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="87dp"
            android:background="@drawable/round_button"
            android:text="Help"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/edit_message"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/My_Container_1_ID"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignTop="@id/map">
    </LinearLayout>
</fragment>
